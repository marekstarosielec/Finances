@using DataSource;
@using DataViews;
@inject DataViewManager _dataViewManager;

<td onclick="@(() => OnClick())"><i class="fa-regular fa-file fa-lg"></i></td>

@code {
    [Parameter]
    public DataView? DataView { get; set; }

    [Parameter]
    public DataRow? Row { get; set; }

    [Parameter]
    public DataViewColumn? Column { get; set; }

    private void OnClick()
    {
        if (DataView == null || Row == null || Column == null)
            return;

        _dataViewManager.OpenDocument(Row["Number"].CurrentValue as int?);
    }
}
