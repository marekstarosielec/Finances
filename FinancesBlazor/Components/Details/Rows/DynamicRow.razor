@using DataSource;
@using DataView;

<DynamicComponent Type="@(GetRowComponent())" Parameters="@(new Dictionary<string, object?>() { { "DataView", @DataView }, { "Row", @Row}})" />

@code {
    [Parameter]
    public DataView? DataView { get; set; }

    [Parameter]
    public Dictionary<DataColumn, object?>? Row { get; set; }

    private Type GetRowComponent()
    {
        return typeof(DefaultRow);
    }
}
