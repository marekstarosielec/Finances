@using DataSource;
@using DataViews;

<RadzenDatePicker @bind-Value=@Value ShowTime="false" DateFormat="yyyy-MM-dd" />

@code {
    [Parameter]
    public DataView? DataView { get; set; }

    [Parameter]
    public DataRow? Row { get; set; }

    [Parameter]
    public DataViewColumn? Column { get; set; }

    public DateTime? Value
    {
        get
        {
            if (DataView == null || Column == null || Row == null)
                return null;
            return Row[Column.PrimaryDataColumnName].CurrentValue as DateTime?;
        }
        set
        {
            if (DataView == null || Column == null || Row == null)
                return;
            Row[Column.PrimaryDataColumnName].CurrentValue = value;
        }
    }
}
